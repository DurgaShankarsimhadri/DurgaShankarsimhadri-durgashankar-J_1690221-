<!DOCTYPE html>
<html>
<head>
    <title>Capitalize First Letter</title>
</head>
<body>
    <h2>Capitalize First Letter of Each Word</h2>
    <p id="capitalized-string"></p>

    <script>
        function capitalizeFirstLetterOfEachWord(str) {
            return str.split(' ')
            .map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase())
            .join(' ');
        }

        const inputString = "hello world from javascript";
        const result = capitalizeFirstLetterOfEachWord(inputString);
        console.log(result); 

       
    </script>
</body>
</html>
